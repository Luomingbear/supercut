<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.slwb.supercut"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/concealTitle" >
        <activity
            android:name="com.slwb.supercut.Home"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.slwb.supercut.MainWork" >
            android:screenOrientation="portrait"
        </activity>
        <activity android:name="com.slwb.supercut.Login" >
            android:screenOrientation="portrait"
        </activity>
        <activity android:name="com.slwb.supercut.PersonInformation" >
            android:screenOrientation="portrait"
        </activity>
        <activity android:name="com.slwb.supercut.Register" >
            android:screenOrientation="portrait"
        </activity>
        <activity android:name="com.slwb.supercut.WorkStation" >
            android:screenOrientation="portrait"
        </activity>
        <activity android:name="com.slwb.supercut.SendEmailActivity" >
            android:screenOrientation="portrait"
        </activity>
        <activity android:name="com.slwb.mediachooser.activity.BucketHomeFragmentActivity" >
android:screenOrientation="portrait"
        </activity>
        <activity android:name="com.slwb.mediachooser.activity.HomeFragmentActivity" >
android:screenOrientation="portrait"
        </activity>
    </application>

</manifest>