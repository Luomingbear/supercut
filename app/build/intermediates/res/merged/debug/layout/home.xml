<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000001"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/frameview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="vertical" >

        <com.slwb.bannerview.ViewFlow
            android:id="@+id/viewflow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <FrameLayout
            android:id="@+id/blurView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center"
            android:padding="3dip" >

            <com.slwb.bannerview.CircleFlowIndicator
                android:id="@+id/viewflowindic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:padding="4dip"/>
        </FrameLayout>

        <TextView
            android:id="@+id/blurtv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/jianhei"
            android:textColor="#ffffff" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        	android:gravity="center|center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/newproject"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_new_project"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        	android:gravity="center|center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/zimu"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_workstation"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
