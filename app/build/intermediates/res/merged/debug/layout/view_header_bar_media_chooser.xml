<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/postToActionBarFromMediaChooser"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_alignParentTop="true"
    android:background="#1d1d1c" >

    <ImageView
        android:id="@+id/backArrowImageViewFromMediaChooserHeaderView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/button_back"
        android:contentDescription="@null"
        android:padding="5dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/titleTextViewFromMediaChooserHeaderBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/backArrowImageViewFromMediaChooserHeaderView"
        android:text="@string/video"
        android:textColor="@color/headerbar_title_color"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/doneTextViewViewFromMediaChooserHeaderView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_ok"
        android:textColor="@color/headerbar_title_color"
        android:textSize="23sp" />

    <ImageView
        android:id="@+id/cameraImageViewFromMediaChooserHeaderBar"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/doneTextViewViewFromMediaChooserHeaderView"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="centerInside" />

</RelativeLayout>