<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageViewFromMediaChooserGridItemRowView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:padding="2dp"
        android:scaleType="centerCrop" />

    <CheckedTextView
        android:id="@+id/checkTextViewFromMediaChooserGridItemRowView"
        style="@style/AppBaseTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@id/imageViewFromMediaChooserGridItemRowView"
        android:checkMark="@drawable/selector_check"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>